{
  "name": "boilerplate",
  "description": "boilerplate",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "dev": "run-p dev:server dev:client tailwind",
    "dev:server": "nodemon --watch server server/index.ts",
    "dev:client": "vite",
    "knex": "knex --knexfile server/db/knexfile.js",
    "db-reset": "run-s db:*",
    "db:delete": "rm server/db/dev.sqlite3",
    "db:migrate": "npm run knex migrate:latest",
    "db:seed": "npm run knex seed:run",
    "vite:start": "vite",
    "vite:build": "vite build",
    "tailwind": "npx tailwindcss -i ./server/public/input.css -o ./server/public/output.css --watch",
    "postinstall": "run-s db:migrate db:seed",
    "test": "jest --verbose --watchAll",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "prettier": "prettier --write ."
  },
  "eslintConfig": {
    "extends": "@devacademy/eslint-config/react",
    "ignorePatterns": [
      "bundle.js"
    ]
  },
  "dependencies": {
    "@auth0/auth0-react": "^1.8.0",
    "auth0": "^2.44.0",
    "express": "^4.17.1",
    "express-jwt": "^6.1.0",
    "express-jwt-authz": "^2.4.1",
    "jwks-rsa": "^2.0.4",
    "knex": "^2.3.0",
    "react-redux": "^7.2.5",
    "sqlite3": "^5.1.2"
  },
  "devDependencies": {
    "@devacademy/eslint-config": "^1.6.0",
    "@reduxjs/toolkit": "^1.8.3",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.7.1",
    "@types/auth0": "^2.35.7",
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.3",
    "@types/node": "^18.11.10",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/react-redux": "^7.1.24",
    "@types/superagent": "^4.1.16",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.46.0",
    "@vitejs/plugin-react": "^2.1.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.9.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^26.6.3",
    "jsdom": "^16.4.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "pettier": "^1.1.0",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^6.2.1",
    "regenerator-runtime": "^0.13.7",
    "superagent": "^8.0.6",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.1.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "vite": "^3.1.3",
    "zod": "^3.19.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
